{
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "project": "./src/tsconfig.json"
  },
  "extends": [
    "eslint:recommended",
    "plugin:jest/style",
    "plugin:react/recommended",
    "plugin:@typescript-eslint/eslint-recommended",
    "plugin:@typescript-eslint/recommended",
    "plugin:import/errors",
    "plugin:import/typescript"
  ],
  "plugins": [
    "@typescript-eslint",
    "jest",
    "react",
    "import"
  ],
  "settings": {
    "react": {
      "createClass": "createReactClass",
      "pragma": "React",
      "version": "detect"
    }
  },
  "rules": {
    "@typescript-eslint/typedef": [
      "error",
      {
        "arrowParameter": true,
        "variableDeclaration": false,
        "propertyDeclaration": true,
        "parameter": false
      }
    ],
    "@typescript-eslint/explicit-member-accessibility": [ 2 ],
    "@typescript-eslint/ban-ts-ignore": 0,
    "@typescript-eslint/no-non-null-assertion": 0,
    "@typescript-eslint/no-explicit-any": 0,
    "@typescript-eslint/no-inferrable-types": 0,
    "@typescript-eslint/explicit-function-return-type": 0,
    "@typescript-eslint/no-empty-interface": 0,
    "@typescript-eslint/no-empty-function": 0,
    "@typescript-eslint/no-unused-vars": 0,
    "@typescript-eslint/no-var-requires": 0,
    "@typescript-eslint/explicit-module-boundary-types": 0,
    "no-console": [ "error" ],
    "keyword-spacing": 2,
    "indent": [ 2, 2 ],
    "brace-style": 2,
    "spaced-comment": [ 2, "always" ],
    "template-tag-spacing": [ 2, "never" ],
    "newline-per-chained-call": [ 2 ],
    "array-element-newline": [ 2, "consistent" ],
    "function-paren-newline": [ 2, "multiline-arguments" ],
    "space-before-function-paren": [ 2, { "anonymous": "always", "named": "never" } ],
    "array-bracket-spacing": [ 2, "always" ],
    "comma-dangle": [ 2, { "functions": "never" } ],
    "eol-last": [ 2, "always" ],
    "max-len": [ 2, { "code": 120 } ],
    "key-spacing": [ 2, { "beforeColon": false, "afterColon": true } ],
    "object-curly-newline": [ 2, { "consistent": true, "multiline": true } ],
    "object-property-newline": [ 2, { "allowAllPropertiesOnSameLine": true } ],
    "no-constructor-return": 2,
    "arrow-spacing": 2,
    "camelcase": 2,
    "yoda": 2,
    "arrow-parens": [ 2, "always" ],
    "no-multiple-empty-lines": 2,
    "no-trailing-spaces": 2,
    "no-multi-spaces": 2,
    "object-curly-spacing": [ 2, "always" ],
    "space-in-parens": [ 2, "never" ],
    "func-call-spacing": [ 2, "never" ],
    "padded-blocks": [ 2, { "blocks": "never", "classes": "always" } ],
    "semi": 2,
    "quotes": [ 2, "double" ],
    "padding-line-between-statements": [
      2,
      { "blankLine": "always", "prev": "*", "next": "return" },
      { "blankLine": "always", "prev": "expression", "next": [ "const", "let", "var" ] },
      { "blankLine": "always", "prev": [ "const", "let", "var" ], "next": "*" },
      { "blankLine": "always", "prev": [ "for", "if", "while", "do", "with" ], "next": "*" },
      { "blankLine": "any", "prev": [ "const", "let", "var" ], "next": [ "const", "let", "var" ] }
    ],
    "space-unary-ops": [
      2, {
        "words": true,
        "nonwords": false,
        "overrides": {
          "++": true,
          "--": true
        }
      }
    ],
    "react/react-in-jsx-scope": 0,
    "react/prop-types": 0,
    "react/jsx-no-target-blank": 0,
    "react/jsx-curly-spacing": [
      "error",
      "never",
      {
        "allowMultiline": false,
        "spacing": {
          "objectLiterals": "always"
        }
      }
    ],
    "@typescript-eslint/naming-convention": [
      "error",
      {
        "selector": "interface",
        "format": ["PascalCase"],
        "custom": {
          "regex": "^I[A-Z]",
          "match": true
        }
      }
    ],
    "import/no-unresolved": 0,
    "import/default": 0,
    "import/order": [
      "error",
      {
        "alphabetize": { "order": "asc", "caseInsensitive": true },
        "newlines-between": "always",
        "groups": [ "builtin", "external", "parent", "sibling", "index" ],
        "pathGroupsExcludedImportTypes": [ "builtin" ],
        "pathGroups": [
          {
            "pattern": "@Macro/**",
            "group": "external",
            "position": "after"
          },
          {
            "pattern": "@Lib/**",
            "group": "external",
            "position": "after"
          },
          {
            "pattern": "@Api/**",
            "group": "external",
            "position": "after"
          },
          {
            "pattern": "@Core/**",
            "group": "external",
            "position": "after"
          },
          {
            "pattern": "@Modules/**",
            "group": "external",
            "position": "after"
          }
        ]
      }
    ]
  }
}
