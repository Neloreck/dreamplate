{
  "defaultSeverity": "error",

  "extends": [
    "tslint-eslint-rules",
    "tslint:recommended"
  ],

  "linterOptions": {
    "exclude": [
      "target/**",
      "**/*.Style.ts",
      "**/*.Spec.ts",
      "**/*.Test.ts"
    ]
  },

  "jsRules": {},

  "rules": {
    "array-type": [true, "generic"],
    "object-curly-spacing": [true, "always"],
    "comma-dangle": ["error", "never"],
    "semicolon": true,
    "max-line-length": [false],
    "no-empty-interface": false,
    "trailing-comma": false,
    "no-bitwise": false,
    "whitespace": [true, "check-rest-spread", "check-module"],
    "object-literal-key-quotes": [
      true, "as-needed"
    ],
    "typedef": [
      true,
      "array-destructuring",
      "arrow-call-signature",
      "arrow-parameter",
      "call-signature",
      "member-variable-declaration",
      "parameter",
      "property-declaration"
    ]
  },


  "rulesDirectory": []
}