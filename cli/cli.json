{
  "config": {
  },
  "scripts": {
    "clean": "npx rimraf ./target/ && echo 'Target cleaned up.'",
    "purge": "npx rimraf ./target && rimraf ./node_modules && echo 'Project purged.'",
    "=============================================================================================================": "",
    "build": [
      "npm run cli clean",
      "ts-node --project ./cli/tsconfig.json ./cli/build/BuildRunner.ts"
    ],
    "============================================================================================================": "=",
    "start": "npx webpack-dev-server --config ./cli/build/config/webpack.config.ts",
    "start:dev": "npx webpack-dev-server --config ./cli/build/config/webpack.config.ts --inline --inspect $NODE_DEBUG_OPTION --compress",
    "===========================================================================================================": "==",
    "test": [
      "npm run cli lint",
      "npm run cli jest"
    ],
    "jest": "cd ./cli && npx ts-node --project ./tsconfig.json ./test/TestRunner.ts",
    "lint": "cd ./cli && npx tslint --project ../src/"
  }
}
