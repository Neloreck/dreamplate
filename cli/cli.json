{
  "config": {
  },
  "scripts": {
    "purge": [
      "npx rimraf ./target",
      "echo 'Target cleaned up.'"
    ],
    "=============================================================================================================": "",
    "start": "ts-node --project ./cli/tsconfig.json ./cli/build/DevRunner.ts",
    "build": "npm run cli purge && ts-node --project ./cli/tsconfig.json ./cli/build/BuildRunner.ts",
    "===========================================================================================================": "==",
    "docs:generate": [
      "rm -rf ./docs",
      "cd ./cli && npx typedoc --tsconfig ../src/tsconfig.json --readme ../src/README.md ../src/"
    ],
    "==========================================================================================================": "===",
    "test": [
      "npm run cli typecheck",
      "npm run cli lint",
      "npm run cli jest"
    ],
    "jest": "npx cross-env NODE_ENV=test ts-node --project ./cli/test/config/tsconfig.json ./cli/test/TestRunner.ts",
    "lint": "npx eslint src/**/*.ts src/**/*.tsx",
    "typecheck": "npx tsc -p src"
  }
}
